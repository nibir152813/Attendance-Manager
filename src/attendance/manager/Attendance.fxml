<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="attendance.manager.AttendanceController">
    
    <TableView fx:id="tableView" layoutX="30" layoutY="30" prefWidth="400" prefHeight="200">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="100"/>
            <TableColumn fx:id="colTeacher" text="Teacher" prefWidth="150"/>
            <TableColumn fx:id="colCourse" text="Course Name" prefWidth="150"/>
        </columns>
    </TableView>

    <Label layoutX="30" layoutY="220" text="ID:"/>
    <TextField fx:id="txtId" layoutX="70" layoutY="220"/>

    <Label layoutX="30" layoutY="260" text="Teacher:"/>
    <TextField fx:id="txtTeacher" layoutX="100" layoutY="260"/>

    <Label layoutX="30" layoutY="300" text="Course Name:"/>
    <TextField fx:id="txtCourse" layoutX="130" layoutY="300"/>

    <Button text="Add" fx:id="btnAdd" layoutX="30" layoutY="350" onAction="#addRecord"/>
    <Button text="Update" fx:id="btnUpdate" layoutX="100" layoutY="350" onAction="#updateRecord"/>
    <Button text="Delete" fx:id="btnDelete" layoutX="180" layoutY="350" onAction="#deleteRecord"/>

</AnchorPane>

